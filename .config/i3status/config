
general {
        colors = true
        interval = 3
}
order += "cpu_usage"
order += "load"
order += "disk /"
order += "disk /home"
order += "wireless _first_"
order += "volume master"
order += "battery 0"
order += "tztime local"
wireless  _first_ {
        format_up = "W: %ip"
        format_down = "W: down"
}
cpu_usage {
        format = "CPU %usage "
}
tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
load {
        format = "%1min %5min %15min"
}
disk "/" {
  format = "/ %percentage_used"
  separator = false
}
disk "/home" {
  format = "/home %percentage_used"
  separator = false
}
volume master {
        format = "â™«: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
battery 0 {
    format = "ðŸ”Œ: %percentage %remaining"
    path = "/sys/class/power_supply/BAT0/uevent"
}
