{
  "prettier.requireConfig": true,

  "tslint.enable": true,
  "tslint.autoFixOnSave": true,

  "coc.preferences.formatOnSaveFiletypes": [],

  "languageserver": {
   "python": {
    "command": "pylsp",
    "args": [
      "--log-file",
      "/tmp/lsp_python.log"
    ],
    "filetypes": [
      "python"
    ]
  },
  "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
  "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    }
}}


